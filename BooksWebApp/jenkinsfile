pipeline {
   agent any
   tools {nodejs "NodeJS"}
    
    stages {
        stage('Install') {
            steps {
                sh 'cd BooksWebApp && npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'cd BooksWebApp && npm build'
            }
        }
        stage('Test') {
            steps {
                node('ubuntu'){
                
                sh script:'''
                   #!/bin/bash
                   echo "This is start $(pwd)"
                   cd /home/arafa/Desktop/
                   mkdir AngularProj
                   cd AngularProj
                   git clone https://github.com/Arafa42/CloudApi-BooksApi.git
                   cd CloudApi-BooksApi/BooksWebApp
                   npm install
                   npm test
                  '''               
            }
                 
            }
        }        
        stage('Deploy test playbook') {
            steps {
            node('ubuntu'){
            
                sh script:'''
                   #!/bin/bash
                   echo "This is start $(pwd)"
                   cd /home/arafa/Desktop/AnsibleDeployment
                   echo "This is $(pwd)"
                   ansible-playbook testDeployment.yml
                  '''
                  
            }
            }
        }             
    }
}
