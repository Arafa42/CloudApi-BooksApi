pipeline {
   agent any
   tools {nodejs "NodeJS"}
    
    stages {
        stage('Restore') {
            steps {
                sh 'cd BooksWebApp && npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'cd BooksWebApp && npm build'
            }
        }
        stage('Test') {
            steps {
                sh 'cd BooksWebApp && npm test'
            }
        }        
        stage('Deploy') {
            steps {
                sh 'echo "deploy"'
            }
        }             
    }
}
