pipeline {
    agent any
    tools {nodejs "NodeJS"}
    
    stages {
        stage('Restore') {
            steps {
                sh 'cd BooksWebApp'
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'cd BooksWebApp'
                sh 'npm build'
            }
        }
        stage('Test') {
            steps {
                sh 'cd BooksWebApp'
                sh '/npm test'
            }
        }        
        stage('Deploy') {
            steps {
                sh ''
            }
        }             
    }
}
