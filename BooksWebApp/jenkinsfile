pipeline {
   agent any
   tools {nodejs "NodeJS"}
    
    stages {
        stage('Install') {
            steps {
                sh 'cd BooksWebApp && npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'cd BooksWebApp && npm build'
            }
        }
        stage('Test') {
            steps {
                //sh 'cd BooksWebApp && npm test'
                  sh 'echo "test"'
            }
        }        
        stage('Deploy playbook') {
            steps {
            node('ubuntu'){
                sh 'pwd'
                sh 'cd /AnsibleDeployment'
                sh 'pwd'
                sh 'ansible-playbook testDeployment.yml --ask-become-pass'
            }
            }
        }             
    }
}
