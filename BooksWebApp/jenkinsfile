pipeline {
    agent any
    tools {nodejs "NodeJS"}
    dir("folder") {
        sh "cd BooksWebApp"
            }
    stages {
        stage('Restore') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm build'
            }
        }
        stage('Test') {
            steps {
                sh '/npm test'
            }
        }        
        stage('Deploy') {
            steps {
                sh ''
            }
        }             
    }
}
